<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart Page</title>
    <link rel="stylesheet" href="/static/navbar.css"/>
</head>
<body>
     <%- include("./navbar.ejs")%>
     <div class="container">
     <div class="left">
      <div class="myCartCount">
          <% sum = 0;
          countt = products.forEach((ell)=>{
            sum += ell.count/1;
              
            })
            %>
          <span class="myCart" id="myCart111">My Cart(<span id="myCart1112"><%= sum %></span>)</span>
          <span class="shopMore" id="shopMore"><a href="/product">Shop More ></a>></span>
        </div>
         <div class="fatchedProducts" id="fatchedProducts">


          <% products.forEach((el)=>{%>
            
          <div id="fDiv">
            
            <div id="imgDiv">
              <img id="fImage" src=<%= el.image%> alt="">
            </div>
            <p id="proName"><%= el.name%></p>
            <p id="cart_count">Count: (<%= el.count/1%>)</p>
            
            <p id="proRemove" ><a href="/basket/remove/<%= el._id%>"> Remove</a></p>
            
            <span id="floatAll">
              <h3 id = "h333"><%=el.price%></h3>
              <p id ="priceAndSymbol">&#x20B9</p><br> <br>
              <p id = "redColor"><%=el.discount%>% off</p>
              <p id="opacity"><%=el.priceWithDis%></p>
            </span>  
          </div>
          <%})%>

        </div>
        </div>
         <div class="right">
        <% 
        TotalMrp = 0;
        SavingOnPrice = 0;
        SubTotal = 0;
        OrderTotal = 0;
        YouSave = 0; 
        products.forEach((el)=>{
          TotalMrp += el.priceWithDis * el.count/1;
          SubTotal += el.price * el.count/1; 
        })
        SavingOnPrice = TotalMrp - SubTotal;
        OrderTotal = SubTotal+49;
        YouSave = SavingOnPrice;
        %>
          
        </div>
        <div class="pincode">
          <input type="number" placeholder="Enter Pincode" />
          <h4>CHECK DELIVERY</h4>
        </div>
        <hr />
        <div class="priceDetails">
          <p>Price Details:</p>
          <div class="total_mrp">
            <div class="t_mrp">Total MRP:</div>
            <div class="t_price" id="t_price">₹<span id = "t_price1"><%= TotalMrp%></span></div>
          </div>
          <div class="savings_on_mrp">
            <div class="s_mrp">Savings on MRP:</div>
            <div class="s_price" id="s_price">-₹<span id = "s_price1"><%= SavingOnPrice%></span></div>
          </div>
          <div class="sub_total">
            <div class="sub_mrp">Subtotal:</div>
            <div class="sub_price" id = "sub_price">₹<span id = "sub_price1"><%= SubTotal%></span></div>
          </div>
          <div class="shipping_charges">
            <div class="shipping">Shipping charges:</div>
            <div class="shipping_price">₹49</div>
          </div>
          <div class="coupon_discount">
            <div class="coupon">Coupon Discount:</div>
            <h4 class="apply_coupon" id="c">APPLY COUPON</h4>
          </div>
        </div>
        <hr />
        <div class="order_total">
          <h3 class="o_total_mrp">Order total:</h3>
          <h3 class="o_total_price" id="o_total_price">₹<span id="o_total_price1"><%= OrderTotal%></span></h3>
        </div>
        <div class="you_save">
          <div class="save">You Save:</div>
          <div class="save_price" id="save_price">₹<span id="save_price1"><%= YouSave%></span></div>
        </div>
      
       <button onclick="checkout()" class="place_order_btn">
          PLACE ORDER
        </button>
        </div>
</body>
</html>
